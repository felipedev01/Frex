generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ShipmentStatus {
  PENDENTE
  EM_TRANSITO
  CONCLUIDO
}

enum NFStatus {
  PENDENTE
  ENTREGUE
  DIVERGENTE
}

model Driver {
  id              Int        @id @default(autoincrement())
  name            String
  transportCompany String
  licensePlate    String     @unique
  email           String     @unique
  password        String
  shipments       Shipment[] @relation("DriverShipments")
}

model Shipment {
  id          Int      @id @default(autoincrement())
  name        String
  driverId    Int
  description String
  origin      String   @default("Extrema-MG")
  destination String
  status      String   @default("PENDENTE")
  createdAt   DateTime @default(now())
  finishedAt  DateTime?

  driver      Driver   @relation("DriverShipments", fields: [driverId], references: [id])
  nfDetails   NFDetail[]
}

model NFDetail {
  id          Int       @id @default(autoincrement())
  shipmentId  Int
  nfNumber    String
  status      NFStatus  @default(PENDENTE)
  proofImage  String?
  issueType   String?   // Tipo do problema reportado
  issueDetails String?  // Detalhes do problema
  createdAt   DateTime  @default(now())
  completedAt DateTime? // Data em que foi entregue ou reportada
  
  shipment    Shipment  @relation(fields: [shipmentId], references: [id])
}