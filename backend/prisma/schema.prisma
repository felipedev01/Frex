generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum ShipmentStatus {
  PENDENTE
  EM_TRANSITO
  CONCLUIDO
}

model Shipment {
  id          Int      @id @default(autoincrement())
  name        String
  nfNumbers   String[]
  driverId    Int
  driver      Driver   @relation(fields: [driverId], references: [id])
  description String
  status      String   @default("PENDENTE") // Status: PENDENTE, FINALIZADO
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  finishedAt  DateTime? // Data de finalização (opcional)
}

model Driver {
  id               Int       @id @default(autoincrement())
  name             String
  transportCompany String
  licensePlate     String    @unique
  email            String    @unique
  password         String
  shipments        Shipment[]
}
